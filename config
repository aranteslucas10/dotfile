# BAR
# ===

bindsym $mod+m bar mode invisible
bindsym $mod+Shift+M bar mode dock

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
	tray_output eDP-1
	position top
        status_command i3status -c ~/.i3/i3status.conf
	# status_command i3blocks
        # status command i3bar
	font pango:monospace 8, FontAwesome 8
	colors {
	    background #000000
	    statusline #ffffff
	     
	    focused_workspace #ff1e90 #000000 #ff1e90
	    active_workspace #7cfc00 #000000 #7cfc00
	    inactive_workspace #1e90ff #000000 #1e90ff
	    urgent_workspace #1e90ff #000000 #1e90ff
	}
}

